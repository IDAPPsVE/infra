 <% include ../views/partials/dashHeader %>
  
  <article class="col-md-8 maincontent">
				<header class="page-header">
					<h1 class="page-title">Nuevo evento</h1>
				</header>
      <% if (message.length > 0) { %>
          <div class="bg-info"><%= message %></div>
      <% } %>

      <!-- LOGIN FORM -->
      <form action="/MaraBox/admin/nuevaEvento" enctype="multipart/form-data" method="post">
        
        <input type="hidden" id="base" name="base64">
        
        <div class="form-group">
              <label>Nombre</label>
              <input type="text" class="form-control" name="nombre">
          </div>
          <div class="form-group">
              <label>Direccion</label>
              <input type="text" class="form-control" name="direccion">
          </div>
          <div class="form-group">
              <label>Ciudad</label>
              <input type="text" class="form-control" name="ciudad">
          </div>
          <div class="form-group">
            <label>Estado</label>
            <select class="tipo" data-style="btn-info" name="estado">
                  <option value="Amazonas">Amazonas</option>
                  <option value="Anzoategui">Anzoategui</option>
                  <option value="Apure">Apure</option>
                  <option value="Aragua">Aragua</option>
                  <option value="Barinas">Barinas</option>
                  <option value="Bolivar">Bolivar</option>
                  <option value="Carabobo">Carabobo</option>
                  <option value="Cojedes">Cojedes</option>
                  <option value="Delta Amacuro">Delta Amacuro</option>
                  <option value="Falcon">Falcon</option>
                  <option value="Guarico">Guarico</option>
                  <option value="Lara">Lara</option>
                  <option value="Merida">Merida</option>
                  <option value="Miranda">Miranda</option>
                  <option value="Monagas">Monagas</option>
                  <option value="Nueva Esparta">Nueva Esparta</option>
                  <option value="Portuguesa">Portuguesa</option>
                  <option value="Sucre">Sucre</option>
                  <option value="Tachira">Tachira</option>
                  <option value="Trujillo">Trujillo</option>
                  <option value="Yaracuy">Yaracuy</option>
                  <option value="Vargas">Vargas</option>
                  <option value="Zulia">Zulia</option>
            </select>
          </div>
          <div class="form-group">
              <label>Costo</label>
              <input type="text" class="form-control" name="costo">
          </div>
          <div class="form-group">
              <label>Fecha de Inicio</label>
              <input type="date" class="form-control" name="fechaInicio">
          </div>
          <div class="form-group">
              <label>Fecha de Culminacion</label>
              <input type="date" class="form-control" name="fechaCulminacion">
          </div>
          <div class="form-group">
              <label>Poster</label>
              <input type='file' id="uploadImage" class="form-control" name="poster"/>
              <img id="img" src="" />
          </div>
          <button type="submit" class="btn btn-primary">Registrar Evento</button>
      </form>
</article>
			<!-- /Article -->

		</div>
	</div>	<!-- /container -->

  <footer>
    <% include ../views/partials/dashFooter %>
  </footer>
</body>
</html>