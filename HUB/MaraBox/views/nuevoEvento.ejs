<!DOCTYPE html>
<html>
<head>
  <% include ../views/partials/head %>
</head>
<body class="container">

  <header>
    <% include ../views/partials/header %>
  </header>

  <div class="container">

  <div class="col-sm-6 col-sm-offset-3">

      <h1><span class="fa fa-sign-in"></span> Signup</h1>

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <!-- LOGIN FORM -->
      <form action="/MaraBox/admin/nuevaEvento" enctype="multipart/form-data" method="post">
        
        <input type="hidden" id="base" name="base64">
        
        <div class="form-group">
              <label>Nombre</label>
              <input type="text" class="form-control" name="nombre">
          </div>
          <div class="form-group">
              <label>Direccion</label>
              <input type="text" class="form-control" name="direccion">
          </div>
          <div class="form-group">
              <label>Ciudad</label>
              <input type="text" class="form-control" name="ciudad">
          </div>
          <div class="form-group">
              <label>Estado</label>
              <input type="text" class="form-control" name="estado">
          </div>
          <div class="form-group">
              <label>Costo</label>
              <input type="text" class="form-control" name="costo">
          </div>
          <div class="form-group">
              <label>Fecha de Inicio</label>
              <input type="text" class="form-control" name="fechaInicio">
          </div>
          <div class="form-group">
              <label>Fecha de Culminacion</label>
              <input type="text" class="form-control" name="fechaCulminacion">
          </div>
          <div class="form-group">
              <label>Poster</label>
              <input type='file' id="uploadImage" class="form-control" name="poster"/>
              <img id="img" src="" />
          </div>
          <button type="submit" class="btn btn-warning btn-lg">Registrar Evento</button>
      </form>

      <hr>

      <p>Already have an account? <a href="/login">Login</a></p>
      <p>Or go <a href="/">home</a>.</p>

  </div>

  </div>

  <footer>
    <% include ../views/partials/footer %>
  </footer>

</body>
</html>
