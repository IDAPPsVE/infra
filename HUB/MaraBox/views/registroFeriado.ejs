 <% include ../views/partials/dashHeader %>
  
  <article class="col-md-8 maincontent">
				<header class="page-header">
					<h1 class="page-title">Registro de tiempo inoperativo</h1>
				</header>
      <% if (message.length > 0) { %>
          <div class="bg-info"><%= message %></div>
      <% } %>

      <form action="/MaraBox/admin/registroFeriado" method="post">
        
          <div class="form-group">
              <label>Fecha libre</label>
              <input type="date" class="form-control" id="fecha" name="fecha">
          </div>
          <div class="form-group">
              <label>Dia Completo?</label>
              <input type="checkbox" class="form-control" name="diaCompleto">
          </div>
          <div class="form-group">
              <label>A partir de</label>
              <input type="text" class="form-control" name="hora">
          </div>
          <div class="form-group">
              <label>Motivo</label>
              <input type="textfield" class="form-control" name="motivo">
          </div>
          
          <button type="submit" class="btn btn-primary">Registrar Solvencia</button>
      </form>

      </article>
			<!-- /Article -->

		</div>
	</div>	<!-- /container -->

  <footer>
    <% include ../views/partials/dashFooter %>
  </footer>
</body>
</html>