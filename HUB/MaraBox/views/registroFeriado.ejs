<!DOCTYPE html>
<html>
<head>
  <% include ../views/partials/head %>
</head>
<body class="container">

  <header>
    <% include ../views/partials/header %>
  </header>

  <div class="container">

  <div class="col-sm-6 col-sm-offset-3">

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <form action="/MaraBox/admin/registroFeriado" method="post">
        
          <div class="form-group">
              <label>Fecha libre</label>
              <input type="date" class="form-control" id="fecha" name="fecha">
          </div>
          <div class="form-group">
              <label>Dia Completo?</label>
              <input type="checkbox" class="form-control" name="diaCompleto">
          </div>
          <div class="form-group">
              <label>A partir de</label>
              <input type="text" class="form-control" name="hora">
          </div>
          <div class="form-group">
              <label>Motivo</label>
              <input type="textfield" class="form-control" name="motivo">
          </div>
          
          <button type="submit" class="btn btn-warning btn-lg">Registrar Solvencia</button>
      </form>

      <hr>

      <p>Already have an account? <a href="/login">Login</a></p>
      <p>Or go <a href="/">home</a>.</p>

  </div>

  </div>

  <footer>
    <% include ../views/partials/footer %>
  </footer>

</body>
</html>

