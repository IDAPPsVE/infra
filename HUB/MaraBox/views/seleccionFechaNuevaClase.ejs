 <% include ../views/partials/dashHeader %>

  <article class="col-md-8 maincontent">
        <header class="page-header">
          <h1 class="page-title">Seleccion del dia de nueva clase</h1>
        </header>
      <% if (message.length > 0) { %>
          <div class="bg-info"><%= message %></div>
      <% } %>

      <h3>Selecciona la fecha a crear la clase</h3>
      <form action="/MaraBox/admin/crearClases" method="post">

          <div class="form-group">
              <label>Fecha de Inicio</label>
              <input type="date" class="form-control" name="fecha">
          </div>

          <button type="submit" class="btn btn-primary">Registrar Evento</button>
      </form>

      </article>
      <!-- /Article -->

    </div>
  </div>	<!-- /container -->

  <footer>
    <% include ../views/partials/dashFooter %>
  </footer>
</body>
</html>
