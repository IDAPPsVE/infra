<!DOCTYPE html>
<html>
<head>
  <% include ../views/partials/head %>
</head>
<body class="container">
  <article class="col-md-8 maincontent">
				<header class="page-header">
					<h1 class="page-title">Registro</h1>
				</header>
      <% if (message.length > 0) { %>
          <div class="bg-info"><%= message %></div>
      <% } %>

      <!-- LOGIN FORM -->
      <form action="/MaraBox/signup" method="post">
        
          <div class="form-group">
              <label>Cedula</label>
              <input type="text" class="form-control" name="cedula">
          </div>
          <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
          </div>
          <div class="form-group">
              <label>Codigo de Acceso</label>
              <input type="text" class="form-control" name="idBoxAdmin">
          </div>

          <button type="submit" class="btn btn-primary">Signup</button>
      </form>

      </article>
			<!-- /Article -->

		</div>
	</div>	<!-- /container -->

  <footer>
    <% include ../views/partials/dashFooter %>
  </footer>
</body>
</html>
