<!DOCTYPE html>
<html>
<head>
  <% include ../views/partials/head %>
</head>
<body class="container">

  <header>
    <% include ../views/partials/header %>
  </header>

  <div class="container">

  <div class="col-sm-6 col-sm-offset-3">

      <h1><span class="fa fa-sign-in"></span> Signup</h1>

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <!-- LOGIN FORM -->
      <form action="/MaraBox/admin/registroNuevoUsuario" method="post">
        
          <div class="form-group">
            <select class="warmup" data-style="btn-info" name="warmup">
              <optgroup label="Warm Up">
                <% ejercicios.forEach(function(ejercicios) { %>
                  <option value=<%= ejercicios._id %>><%= ejercicios.MaraBox.Nombre %></option>
	            <% }); %>
              </optgroup>
            </select>
          </div>
          
          <div class="form-group">
            <select class="wod" data-style="btn-info" name="wod">
              <optgroup label="WOD">
                <% ejercicios.forEach(function(ejercicios) { %>
                  <option value=<%= ejercicios._id %>><%= ejercicios.MaraBox.Nombre %></option>
	            <% }); %>
              </optgroup>
            </select>
          </div>
          
          <div class="form-group">
            <select class="buyout" data-style="btn-info" name="buyout">
              <optgroup label="Buy Out">
                <% ejercicios.forEach(function(ejercicios) { %>
                  <option value=<%= ejercicios._id %>><%= ejercicios.MaraBox.Nombre %></option>
	            <% }); %>
              </optgroup>
            </select>
          </div>
          
          <button type="submit" class="btn btn-warning btn-lg">Guardar WOD</button>
      </form>

      <hr>

      <p>Already have an account? <a href="/login">Login</a></p>
      <p>Or go <a href="/">home</a>.</p>

  </div>

  </div>

  <footer>
    <% include ../views/partials/footer %>
  </footer>

</body>
</html>