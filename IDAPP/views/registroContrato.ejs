<!DOCTYPE html>
<html>
<head>
  <% include ../views/partials/head %>
</head>
<body class="container">

  <header>
    <% include ../views/partials/header %>
  </header>

  <div class="container">

  <div class="col-sm-6 col-sm-offset-3">

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <form action="/registroContrato" method="post">
          <div class="form-group">
              <label>Contrato</label>
              <input type="text" class="form-control" name="contrato">
          </div>
          <div class="form-group">
              <label>Android</label>
              <input type="checkbox" class="form-control" name="android">
          </div>
          <div class="form-group">
              <label>iOS</label>
              <input type="checkbox" class="form-control" name="ios">
          </div>
          <div class="form-group">
              <label>Sistema Administrativo</label>
              <input type="checkbox" class="form-control" name="administrativo">
          </div>
          <div class="form-group">
              <label>RIF</label>
              <input type="text" class="form-control" name="rif">
          </div>
          <div class="form-group">
              <label>Nombre de Empresa</label>
              <input type="text" class="form-control" name="empresa">
          </div>
          <div class="form-group">
              <label>Telefono de Oficina</label>
              <input type="text" class="form-control" name="telefonoOficina">
          </div>
          <div class="form-group">
              <label>Telefono de Contacto Personal</label>
              <input type="text" class="form-control" name="telefonoPersonal">
          </div>
          <div class="form-group">
              <label>Direccion</label>
              <input type="text" class="form-control" name="direccion">
          </div>
          <div class="form-group">
              <label>Correo Electonico</label>
              <input type="text" class="form-control" name="correo">
          </div>
          <div class="form-group">
              <label>Nombre de la Aplicacion</label>
              <input type="text" class="form-control" name="app">
          </div>
          <div class="form-group">
            <label>Facturacion</label>
            <select class="tipo" data-style="btn-info" name="estado">
              <option value="mensual">Mensual</option>
              <option value="trimestral">Trimestral</option>
              <option value="anual">Anual</option>
            </select>
          </div>
          <div class="form-group">
              <label>Numero de Firmantes</label>
              <input type="text" class="form-control" name="firmantes">
          </div>
          <div class="form-group" id="fi">
              <label>Cedula Firmantes</label>
              <input type="text" class="form-control" name="cedulaFirmantes[]">
          </div>
          <a href="#" id="remfi">Remove</a>
          <h2><a href="#" id="addfi">Add Another Input Box</a></h2>


          <button type="submit" class="btn btn-warning btn-lg">Registrar Usuario</button>
      </form>

      <hr>

      <p>Already have an account? <a href="/login">Login</a></p>
      <p>Or go <a href="/">home</a>.</p>

  </div>

  </div>

  <footer>
    <% include ../views/partials/footer %>
  </footer>

</body>
</html>
